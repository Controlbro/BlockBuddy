    <script>
        // Loading Screen Animation
        function updateLoadingScreen() {
            const loadingBar = document.getElementById('loadingBar');
            const loadingText = document.getElementById('loadingText');
            const loadingScreen = document.getElementById('loadingScreen');
            let progress = 0;

            const interval = setInterval(() => {
                progress += Math.random() * 15;
                if (progress > 100) progress = 100;
                
                loadingBar.style.width = `${progress}%`;
                loadingText.textContent = getLoadingText(progress);

                if (progress === 100) {
                    clearInterval(interval);
                    setTimeout(() => {
                        loadingScreen.classList.add('opacity-0');
                        setTimeout(() => {
                            loadingScreen.style.display = 'none';
                        }, 500);
                    }, 500);
                }
            }, 200);

            function getLoadingText(progress) {
                if (progress < 20) return 'Generating terrain...';
                if (progress < 40) return 'Spawning mobs...';
                if (progress < 60) return 'Creating world...';
                if (progress < 80) return 'Loading chunks...';
                return 'Almost there...';
            }
        }
        document.addEventListener('DOMContentLoaded', () => {
            updateLoadingScreen();
        });
    </script>

