<!DOCTYPE html>
<html lang="en" class="scroll-smooth dark">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>404 - Page Not Found</title>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <link href="https://fonts.cdnfonts.com/css/minecraft-4" rel="stylesheet">
    <script src="https://cdn.tailwindcss.com"></script>
    <script>
        tailwind.config = {
            darkMode: 'class',
            theme: {
                extend: {
                    fontFamily: {
                        minecraft: ['Minecraft', 'sans-serif'],
                        inter: ['Inter', 'sans-serif'],
                    },
                    colors: {
                        minecraft: {
                            green: '#44bd32',
                            blue: '#3498db',
                            gold: '#f1c40f',
                            dark: '#1e272e',
                            light: '#ecf0f1',
                        },
                    },
                    animation: {
                        'float': 'float 3s ease-in-out infinite',
                        'bounce-slow': 'bounce 3s ease-in-out infinite',
                        'spin-slow': 'spin 8s linear infinite',
                        'pulse-slow': 'pulse 4s cubic-bezier(0.4, 0, 0.6, 1) infinite',
                        'minecraft-hover': 'minecraft-hover 1s ease-in-out infinite',
                    },
                    keyframes: {
                        float: {
                            '0%, 100%': { transform: 'translateY(0)' },
                            '50%': { transform: 'translateY(-10px)' },
                        },
                        'minecraft-hover': {
                            '0%, 100%': { transform: 'translateY(0) scale(1)' },
                            '50%': { transform: 'translateY(-5px) scale(1.05)' },
                        }
                    }
                },
            },
        }

        // Theme Toggle Function
        function toggleTheme() {
            if (document.documentElement.classList.contains('dark')) {
                document.documentElement.classList.remove('dark');
                localStorage.theme = 'light';
            } else {
                document.documentElement.classList.add('dark');
                localStorage.theme = 'dark';
            }
        }

        // Set Initial Theme
        if (localStorage.theme === 'dark' || (!('theme' in localStorage) && window.matchMedia('(prefers-color-scheme: dark)').matches)) {
            document.documentElement.classList.add('dark');
        } else {
            document.documentElement.classList.remove('dark');
        }
    </script>
</head>
<body class="bg-minecraft-light dark:bg-minecraft-dark text-gray-800 dark:text-white font-inter transition-colors duration-300">
    <!-- Theme Toggle Button -->
    <button 
        onclick="toggleTheme()"
        class="fixed bottom-4 right-4 z-50 p-2 rounded-full bg-gray-200 dark:bg-gray-800 hover:bg-gray-300 dark:hover:bg-gray-700 transition-colors duration-300"
    >
        <i class="fas fa-sun dark:hidden text-yellow-500 text-xl"></i>
        <i class="fas fa-moon hidden dark:block text-blue-400 text-xl"></i>
    </button>

    <!-- 404 Content -->
    <div class="min-h-screen flex flex-col items-center justify-center text-center p-4">
        <div class="bg-white/80 dark:bg-black/60 p-8 rounded-lg max-w-2xl backdrop-blur-sm">
            <h1 class="font-minecraft text-6xl md:text-8xl mb-4 animate-pulse-slow">404</h1>
            <h2 class="font-minecraft text-2xl md:text-4xl mb-6 animate-minecraft-hover">Page Not Found</h2>
            <p class="text-gray-600 dark:text-gray-300 mb-8">
                Oops! It looks like you've wandered into uncharted territory. The page you're looking for doesn't exist.
            </p>
            <div class="flex flex-col md:flex-row space-y-4 md:space-y-0 md:space-x-4 justify-center">
                <a href="/" class="px-6 py-3 font-minecraft bg-minecraft-green hover:bg-green-600 transition-colors rounded-lg transform hover:scale-105">
                    <i class="fas fa-home mr-2"></i>
                    Return Home
                </a>
                <a href="/#plans" class="px-6 py-3 font-minecraft bg-minecraft-blue hover:bg-blue-600 transition-colors rounded-lg transform hover:scale-105">
                    <i class="fas fa-server mr-2"></i>
                    View Plans
                </a>
            </div>
        </div>
    </div>

    <!-- Floating Particles -->
    <div class="absolute inset-0 pointer-events-none">
        <img src="/images/diamond.png" alt="Diamond" class="absolute w-8 h-8 animate-float opacity-50 top-1/4 left-1/4">
        <img src="/images/emerald.png" alt="Emerald" class="absolute w-8 h-8 animate-bounce-slow opacity-50 top-1/3 right-1/4">
        <img src="/images/gold.png" alt="Gold" class="absolute w-8 h-8 animate-spin-slow opacity-50 bottom-1/4 left-1/3">
    </div>
</body>
</html> 